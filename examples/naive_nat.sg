(use-macros "milkyway/prelude.sg")

(spec nat {
  [(-nat 0) ok]
  [(-nat (s N)) (+nat N)]})

(def 0 (+nat 0))     (:: 0 nat)
(def 1 (+nat (s 0))) (:: 1 nat)
(def 2 (stack +nat s s 0)) (:: 2 nat)

(def add1 [(-nat X) (+nat (s X))])

(def is_empty {
  [(-nat 0) (res 1)]
  [(-nat (s _)) (res 0)]})

(show (exec @#add1 #2))
(show (exec #is_empty @#0))
(show (exec #is_empty @#1))
